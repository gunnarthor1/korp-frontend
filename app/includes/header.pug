    .clearfix
  .header-row
    .header-left
      //- TODO RMLOGO Skipta út fyrir logo Risamálheildarinnar
      a(ng-click="logoClick()")
        img#main_logo(src='img/sam_logo.png')
      #corpusbox.scroll_checkboxes.inline-block
